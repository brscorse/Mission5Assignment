@{
    ViewData["Title"] = "Delete Movie";
}

@model AppResponse

<div class="text-center">
    <br /><br /><br />
    <h2>Confirm Deletion</h2>
    <h3>Are you sure you want to delete @Model.Title from the Joel Hilton Film Collection?</h3>

    <form method='post' asp-controller="Home" asp-action="Delete">
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Home" asp-action="FilmList" class="btn btn-outline-primary">Cancel</a>

        <input type="hidden" asp-for="MovieId"/>
    </form>
</div>
